import socket

# Substitua pelo endereço IP do servidor
SERVER_HOST = '192.168.4.114'  # Coloque aqui o IP do servidor
SERVER_PORT = 5000            # Porta que o servidor está usando

# Criação de um socket TCP/IP
client_socket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
client_socket.connect((SERVER_HOST, SERVER_PORT))  # Conecta ao servidor

# Envia uma mensagem para o servidor
message = "Olá, servidor!"
client_socket.sendall(message.encode())

# Recebe a resposta do servidor
response = client_socket.recv(1024).decode()
print(f"Resposta do servidor: {response}")

# Fecha a conexão com o servidor
client_socket.close()

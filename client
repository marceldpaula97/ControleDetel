def registrar_usuario():
    nome = input("Digite seu nome de usuário: ")
    senha = input("Digite sua senha: ")
    message = f"REGISTRAR,{nome},{senha}"
    return message

def fazer_login():
    nome = input("Digite seu nome de usuário: ")
    senha = input("Digite sua senha: ")
    message = f"LOGIN,{nome},{senha}"
    return message

